{
    "name": "enxero-platform-backend",
    "version": "1.0.0",
    "private": true,
    "description": "Backend service for Enxero Platform",
    "main": "dist/app.ts",
    "scripts": {
        "start": "node dist/server.js",
        "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
        "build": "tsc",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "prisma:generate": "prisma generate",
        "prisma:migrate": "prisma migrate dev",
        "prisma:studio": "prisma studio",
        "typecheck": "tsc --noEmit",
        "prisma:seed": "ts-node prisma/seed.ts",
        "generate:openapi": "node -e \"require('swagger-jsdoc')(require('./src/config/swagger').default, (err, spec) => { if (err) throw err; require('fs').writeFileSync('openapi.json', JSON.stringify(spec, null, 2)); })\"",
        "generate:api-md": "swagger-jsdoc -d ./src/config/swagger.ts -o openapi.json && widdershins openapi.json -o docs/api/openapi.md",
        "generate:api-docs": "node scripts/generate-api-docs.js",
        "generate:api-html": "redoc-cli bundle openapi.json -o docs/api/openapi.html",
        "generate:api-docs:all": "tsc && npm run generate:api-docs && npm run generate:api-html"
    },
    "author": "Evans Manyala",
    "dependencies": {
        "@nestjs/common": "^11.1.3",
        "@nestjs/config": "^4.0.2",
        "@prisma/client": "^6.15.0",
        "@types/bcrypt": "^6.0.0",
        "@types/ioredis": "^5.0.0",
        "@types/nodemailer": "^7.0.1",
        "@types/qrcode": "^1.5.5",
        "@types/speakeasy": "^2.0.10",
        "bcrypt": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "ioredis": "^5.6.1",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.0",
        "multer": "^2.0.2",
        "nodemailer": "^7.0.5",
        "qrcode": "^1.5.4",
        "speakeasy": "^2.0.0",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1",
        "uuid": "^11.1.0",
        "winston": "^3.11.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.9",
        "@types/multer": "^2.0.0",
        "@types/node": "^20.19.1",
        "@types/supertest": "^6.0.2",
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "@types/uuid": "^10.0.0",
        "@typescript-eslint/eslint-plugin": "^7.0.1",
        "@typescript-eslint/parser": "^7.0.1",
        "axios": "^1.11.0",
        "colors": "^1.4.0",
        "dotenv": "^16.5.0",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-prettier": "^5.1.3",
        "jest": "^29.7.0",
        "prettier": "^3.2.5",
        "prisma": "^6.15.0",
        "redoc-cli": "^0.13.21",
        "supertest": "^6.3.4",
        "ts-jest": "^29.4.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3",
        "widdershins": "^4.0.1"
    },
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    }
}
